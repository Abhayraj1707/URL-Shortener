<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>Document</title>
  <style>
    .background{
      background-image: url("https://png.pngtree.com/thumb_back/fh260/background/20200714/pngtree-modern-double-color-futuristic-neon-background-image_351866.jpg");
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      height: 100vh;
    }
  </style>
</head>
<body class="background">
  <div class="container">
    <h1 style="color: aliceblue;" class="d-flex justify-content-center">URL Shortener</h1>
    <form action="/shortUrls" method="POST" class="my-4 form-inline">
      <label for="fullUrl"  class="sr-only">Url</label>
      <input required placeholder="Enter Link here" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
      <button class="btn btn-success" type="submit">Shorten URL</button>
    </form>
    <!-- <div class="row justify-content-center"> -->
      <!-- <div class="col-auto"> -->
        <table class="table table-striped table-responsive ">
          <thead>
            <tr>
              <th style="color: aliceblue;">Full URL</th>
              <th style="color: aliceblue;">Short URL</th>
              <th style="color: aliceblue;">Clicks</th>
              <th style="color: aliceblue;">Action</th>
            </tr>
          </thead>
          <tbody>
            <% shortUrls.forEach(shortUrl => { %>
              <tr>
                <td><a  target="_" href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                <td><a  target="_" href="<%= shortUrl.short %>">https://url-shortener17.herokuapp.com/<%= shortUrl.short %></a></td>
                <td><%= shortUrl.clicks %></td>
                <td><a href="delete/<%= shortUrl.id %>" class="btn btn-primary">Delete</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <!-- </div> -->
    <!-- </div> -->
   
  </div>
</body>
</html>